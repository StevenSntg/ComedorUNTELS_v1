<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:elevation="0dp"
        android:stateListAnimator="@null">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/md_surface"
            app:collapsedTitleGravity="start"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleMarginBottom="24dp"
            app:collapsedTitleTextColor="@color/md_on_surface"
            app:expandedTitleTextColor="@android:color/white">

            <!-- Imagen de fondo con overlay -->
            <ImageView
                android:id="@+id/imgHeader"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <!-- Gradiente overlay -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_header_modern"
                app:layout_collapseMode="parallax" />

            <!-- Toolbar con íconos -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:title="Menú de Hoy"
                app:titleTextColor="@android:color/white"
                app:menu="@menu/menu_hoy"
                app:layout_collapseMode="pin" />

            <!-- Información del header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:padding="24dp"
                android:layout_marginBottom="?attr/actionBarSize">

                <!-- Badge de hoy -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOY"
                    android:background="@drawable/badge_today"
                    android:textColor="@color/md_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvDia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viernes, 19 de Septiembre"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/tvNombrePlatoHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Almuerzo • Sopa de verduras + Asado de pavo c/ pepián"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp" />

                <!-- Indicadores rápidos -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="🔥 1187 kcal"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@drawable/pill_transparent"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.8"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:background="@drawable/pill_transparent"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Contenido principal -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Selector de comida mejorado -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cgComidas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="true"
                app:chipSpacingHorizontal="12dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipDesayuno"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌅 Desayuno"
                    android:checkable="true"
                    app:chipIcon="@drawable/ic_sun"
                    app:chipBackgroundColor="@color/chip_selector"
                    app:chipStrokeColor="@color/md_outline"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAlmuerzo"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="☀️ Almuerzo"
                    android:checkable="true"
                    app:chipIcon="@drawable/ic_sun_high"
                    app:chipBackgroundColor="@color/chip_selector"
                    app:chipStrokeColor="@color/md_outline"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCena"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌙 Cena"
                    android:checkable="true"
                    app:chipIcon="@drawable/ic_moon"
                    app:chipBackgroundColor="@color/chip_selector"
                    app:chipStrokeColor="@color/md_outline"
                    app:chipStrokeWidth="1dp" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Tarjeta principal modernizada -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/md_surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header del plato con color accent -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/viewColorAccent"
                            android:layout_width="4dp"
                            android:layout_height="40dp"
                            android:background="@drawable/accent_bar"
                            android:backgroundTint="@color/md_primary" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:id="@+id/tvTituloComida"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Almuerzo Completo"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:textColor="@color/md_on_surface"/>

                            <LinearLayout
                                android:id="@+id/layoutRating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="4dp"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="⭐⭐⭐⭐⭐"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvRating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.8"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/md_on_surface"
                                    android:layout_marginStart="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="(142)"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280"
                                    android:layout_marginStart="4dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Estado de disponibilidad -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🟢 Disponible"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_primary"
                            android:background="@drawable/pill_background"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp" />
                    </LinearLayout>

                    <!-- Descripción del plato -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp">

                        <TextView
                            android:id="@+id/tvNombrePlato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sopa de quinua + Lomo saltado con arroz + Ensalada fresca"
                            android:textSize="16sp"
                            android:textColor="@color/md_on_surface"
                            android:lineSpacingExtra="2dp" />

                        <TextView
                            android:id="@+id/tvDescripcion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Chicha morada • Fruta: Papaya"
                            android:textColor="#6B7280"
                            android:textSize="14sp" />

                        <!-- Tags mejorados -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp">

                            <TextView
                                android:id="@+id/tag1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:background="@drawable/tag_background"
                                android:text="🔥 Energético"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tag2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:padding="8dp"
                                android:background="@drawable/tag_background"
                                android:text="🥩 Proteínas"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tag3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:padding="8dp"
                                android:background="@drawable/tag_background"
                                android:text="🍚 Peruano"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Barra de popularidad -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="16dp">

                        <TextView
                            android:id="@+id/tvPopularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Popular entre estudiantes (4.8/5)"
                            android:textSize="12sp"
                            android:textColor="#6B7280" />

                        <ProgressBar
                            android:id="@+id/progPopularidad"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            android:layout_marginTop="4dp"
                            android:max="100"
                            android:progress="95"
                            android:progressTint="@color/md_primary"
                            android:progressBackgroundTint="@color/md_outline_variant" />
                    </LinearLayout>

                    <!-- Información nutricional mejorada -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="💚 Información Nutricional"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/md_on_surface"
                            android:layout_marginBottom="12dp" />

                        <!-- Grid nutricional -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Calorías -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/nutrient_card"
                                android:padding="16dp"
                                android:layout_marginEnd="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🔥"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/tvKcal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1187"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/md_on_surface"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="kcal"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280" />
                            </LinearLayout>

                            <!-- Proteínas -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/nutrient_card"
                                android:padding="16dp"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="💪"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/tvProt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="45.2"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/md_on_surface"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="g prot"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280" />
                            </LinearLayout>

                            <!-- Lípidos -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/nutrient_card"
                                android:padding="16dp"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🧈"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/tvLip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="32.1"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/md_on_surface"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="g lip"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280" />
                            </LinearLayout>

                            <!-- Carbohidratos -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/nutrient_card"
                                android:padding="16dp"
                                android:layout_marginStart="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="🍚"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/tvCarb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="145.6"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/md_on_surface"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="g carb"
                                    android:textSize="12sp"
                                    android:textColor="#6B7280" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Información de cupos -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvCupos"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cupos disponibles: 85 de 120"
                                android:textColor="@color/md_on_surface"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="71%"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_primary" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progCupos"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="8dp"
                            android:max="120"
                            android:progress="85"
                            android:progressTint="@color/md_primary"
                            android:progressBackgroundTint="@color/md_outline_variant"
                            android:background="@drawable/progress_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⚡ Reserva rápida: Los cupos se agotan en promedio en 23 minutos"
                            android:textSize="12sp"
                            android:textColor="#EF4444"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de reserva modernizada -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/md_surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Header de reserva -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🎯 Reserva tu cupo"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:textColor="@color/md_on_surface" />

                            <TextView
                                android:id="@+id/tvCountdown"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⏰ Abre en: 02:15:30"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/md_primary"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>

                        <CheckBox
                            android:id="@+id/cbRecordarme"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recordarme"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Botones de acción -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnReservar"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:text="🍽️ Chapa cupo"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/md_primary"
                            app:cornerRadius="16dp"
                            app:elevation="6dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCompartir"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="📤 Compartir"
                            android:textSize="16sp"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            app:cornerRadius="16dp"
                            app:strokeColor="@color/md_primary"
                            app:strokeWidth="2dp" />
                    </LinearLayout>

                    <!-- Link al menú semanal -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVerSemana"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="📅 Ver menú semanal completo"
                        android:textColor="@color/md_primary"
                        android:textStyle="bold"
                        style="@style/Widget.Material3.Button.TextButton"
                        app:icon="@drawable/ic_arrow_right"
                        app:iconGravity="end"
                        app:iconTint="@color/md_primary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tarjeta de sostenibilidad mejorada -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSostenibilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/md_surface"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:strokeWidth="0dp">


            </com.google.android.material.card.MaterialCardView>

            <!-- Espaciado final -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FAB para acciones rápidas -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabAcciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="24dp"
        android:text="⚡ Reserva tu cupo"
